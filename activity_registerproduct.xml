<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerproduct"
    android:orientation="vertical"
    >
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/etidproduct"
        android:layout_width="50dp"
        android:layout_height="6dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referencia"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/etreferencia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:hint="Ingrese la referencia"
        android:inputType="textEmailAddress"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/etnombreproducto"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:hint="Ingresar el nombre de producto"
        android:inputType="textPersonName"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/etprecio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:hint="Ingrese el precio"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existencias"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/etstock"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:hint="Digite el Stock"
        />
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btnagregar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btnbuscar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btneditar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btneliminar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>
